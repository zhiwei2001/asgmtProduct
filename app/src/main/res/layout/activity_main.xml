<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8BD"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtTile"
        android:layout_width="49dp"
        android:layout_height="34dp"
        android:text="HTF"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnWomen"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/fashion_model_beauty_nude_girl_white_shirt_looking_camera_isolated_beige_background_banner_72389_787"
        android:text="Women"
android:layout_marginBottom="20dp"
        android:textAlignment="textEnd"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/txtTile"
        tools:layout_editor_absoluteX="84dp" />

    <Button
        android:id="@+id/btnMen"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Men"
        android:background="@drawable/mask_group_3"
        android:textAlignment="textStart"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/btnWomen"
        tools:layout_editor_absoluteX="47dp" />

    <Button
        android:id="@+id/btnKid"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/mask_group_4"
        android:text="Kids"
        android:textAlignment="textStart"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@+id/btnMen"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>